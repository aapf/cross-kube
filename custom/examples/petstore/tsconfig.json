{
  "compilerOptions": {
    "allowJs": false,
    "moduleResolution": "node",
    "target": "es2017",
    "module": "es2015",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src"]
}
